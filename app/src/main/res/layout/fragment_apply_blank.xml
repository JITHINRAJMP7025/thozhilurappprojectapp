<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ApplyBlankFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Application"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_textView3"
            android:layout_width="107dp"
            android:layout_height="56dp"
            android:text=" Name"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addrs_textView3"
            android:layout_width="107dp"
            android:layout_height="56dp"
            android:text=" Address"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/editTextTextPostalAddress"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPostalAddress" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prflpic_textView3"
            android:layout_width="107dp"
            android:layout_height="56dp"
            android:text=" Photo"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="choose image"
            android:id="@+id/userpic"
            app:backgroundTint="@color/pink" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adharpic_textView3"
            android:layout_width="107dp"
            android:layout_height="56dp"
            android:text=" Adhar"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/edit_adhar"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adharpic_textView4"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:text=" Upload"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

        <Button
            android:layout_width="188dp"
            android:layout_height="36dp"
            android:text="choose image"
            android:id="@+id/adharpic"
            app:backgroundTint="@color/pink" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bankpic_textView4"
            android:layout_width="107dp"
            android:layout_height="56dp"
            android:text=" BankNo"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edit_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bankpic_textView3"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:text=" Upload"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

        <Button
            android:layout_width="188dp"
            android:layout_height="36dp"
            android:text="choose image"
            android:id="@+id/bankpic"
            app:backgroundTint="@color/pink" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:text="Apply"
            android:id="@+id/apply"
            app:backgroundTint="@color/pink" />

        <TextView
            android:id="@+id/verifiedmsg_textView3"
            android:layout_width="247dp"
            android:layout_height="52dp"
            android:textColor="#0E0E0E"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>